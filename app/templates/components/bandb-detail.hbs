
<h1>{{bandb.name}}</h1>
<h5>{{bandb.location}}</h5>
{{#if bandb.averageScore}}
<p>Average rating: {{bandb.averageScore}} out of 5</p>
{{/if}}
<div><img src={{bandb.image}}></div>

<ul>
  {{#each bandb.reviews as |review|}}
  <li><h4>{{review.author}} says:</h4>
    <p>{{review.content}} on {{date-display review}}</p>
    <p>Score: {{review.score}} out of 5</p>
    <hr>
  </li>
  {{/each}}
</ul>
